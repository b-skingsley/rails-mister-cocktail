<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card" style="width: 18rem; background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key %>'); background-size: cover;">
            <div class="card-body">
              <h4 class="card-title"><%= cocktail.name %></h4>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
